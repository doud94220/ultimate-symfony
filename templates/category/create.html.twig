{% extends "base.html.twig" %}

{% block title %}
	Création d'une catégorie
{% endblock %}

{% block body %}
	<h1>Création d'une nouvelle catégorie</h1>
	{{ form_start(formView) }}
	{# {{ form_widget(formView) }} #}
	<div class="row">
		{{ form_row(formView.name) }}
	</div>
	<button class="btn btn-primary">
		<i class="fas fa-save">
			Créer la catégorie</i>
	</button>
	{{ form_end(formView) }}
{% endblock %}
