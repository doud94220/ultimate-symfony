{% extends "base.html.twig" %}

{# {% form_theme formView 'bootstrap_4_layout.html.twig' %} #}

{% block title %}
	Creation d'un produit
{% endblock %}

{% block body %}
	<h1>Nouveau Produit</h1>
	{# {{ form(formView) }} #}
	{{ form_start(formView)	}}
	{{ form_errors(formView) }}
	{# {{ form_widget(formView) }} #}

	<div class="row">
		<div class="col">
			<div class="form-group">
				{{ form_row(formView.name) }}
				{{ form_row(formView.price) }}
			</div>
		</div>
		<div class="col">
			{{ form_row(formView.mainPicture) }}
			{{ form_row(formView.category) }}
			{{ form_row(formView.shortDescription) }}
		</div>
	</div>

	<button class="btn btn-primary">
		<i class="fas fa-save"></i>
		Créer le produit
	</button>
	{{ form_end(formView) }}
{% endblock %}

